<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PizzaController">
   <style>
      -fx-background-color: #f5e6d3;
   </style>
   
   <top>
      <!-- Barre de recherche -->
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         
         <TextField fx:id="searchField" prefHeight="50.0" prefWidth="600.0" promptText="Rechercher">
            <style>
               -fx-background-color: white;
               -fx-background-radius: 25.0;
               -fx-border-radius: 25.0;
               -fx-padding: 0 20 0 20;
               -fx-font-size: 16px;
               -fx-prompt-text-fill: #888888;
            </style>
         </TextField>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="30.0">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="10.0" />
         </padding>
         
         <!-- Section Tendances -->
         <VBox spacing="20.0">
            <Label text="Tendances ðŸ”¥:" textFill="#6b5b95">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <!-- Pizza 1 -->
               <VBox fx:id="trend1" alignment="CENTER" prefHeight="160.0" prefWidth="160.0" spacing="10.0">
                  <style>
                     -fx-background-color: #f4d03f;
                     -fx-background-radius: 15.0;
                     -fx-border-radius: 15.0;
                  </style>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
                  
                  <!-- Simulation des points blancs sur la pizza -->
                  <StackPane />
               </VBox>
               
               <!-- Pizza 2 -->
               <VBox fx:id="trend2" alignment="CENTER" prefHeight="160.0" prefWidth="160.0" spacing="10.0">
                  <style>
                     -fx-background-color: #f4d03f;
                     -fx-background-radius: 15.0;
                     -fx-border-radius: 15.0;
                  </style>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
                  
                  <StackPane />
               </VBox>
               
               <!-- Pizza 3 -->
               <VBox fx:id="trend3" alignment="CENTER" prefHeight="160.0" prefWidth="160.0" spacing="10.0">
                  <style>
                     -fx-background-color: #f4d03f;
                     -fx-background-radius: 15.0;
                     -fx-border-radius: 15.0;
                  </style>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
               </VBox>
            </HBox>
         </VBox>
         
         <!-- Section Nouveau -->
         <VBox spacing="20.0">
            <Label text="Nouveau :" textFill="#6b5b95">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <!-- Nouveaux produits (vides pour l'instant comme dans l'image) -->
               <VBox fx:id="new1" alignment="CENTER" prefHeight="160.0" prefWidth="160.0" spacing="10.0">
                  <style>
                     -fx-background-color: #f4d03f;
                     -fx-background-radius: 15.0;
                     -fx-border-radius: 15.0;
                  </style>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
               </VBox>
               
               <VBox fx:id="new2" alignment="CENTER" prefHeight="160.0" prefWidth="160.0" spacing="10.0">
                  <style>
                     -fx-background-color: #f4d03f;
                     -fx-background-radius: 15.0;
                     -fx-border-radius: 15.0;
                  </style>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
               </VBox>
               
               <VBox fx:id="new3" alignment="CENTER" prefHeight="160.0" prefWidth="160.0" spacing="10.0">
                  <style>
                     -fx-background-color: #f4d03f;
                     -fx-background-radius: 15.0;
                     -fx-border-radius: 15.0;
                  </style>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
               </VBox>
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane>
