<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="PizzaSelectorController"
      prefHeight="600" prefWidth="450"
      style="-fx-background-color: #f9e8c0;">

    <!-- Forme Section -->
    <VBox spacing="10">
        <padding>
            <Insets top="15" bottom="15" left="15" right="15"/>
        </padding>

        <Label text="Forme :" 
               style="-fx-text-fill: #5c5c8a; -fx-font-weight: bold;"/>
        
        <HBox spacing="15" alignment="CENTER">
            <!-- Rectangle -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100">
                        <Rectangle width="80" height="80" fill="white" arcWidth="10" arcHeight="10"/>
                    </StackPane>
                    <Label text="Rectangle" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Triangle -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100">
                        <Polygon points="50,0 0,80 100,80" fill="white"/>
                    </StackPane>
                    <Label text="Triangle" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Circle -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100">
                        <Circle radius="40" fill="white"/>
                    </StackPane>
                    <Label text="Cercle" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
        </HBox>
    </VBox>
    
    <!-- Pâte Section -->
    <VBox spacing="10">
        <padding>
            <Insets top="5" bottom="15" left="15" right="15"/>
        </padding>

        <Label text="Pâte :" 
               style="-fx-text-fill: #5c5c8a; -fx-font-weight: bold;"/>
        
        <HBox spacing="15" alignment="CENTER">
            <!-- Normale -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Rectangle width="80" height="15" fill="white" arcWidth="15" arcHeight="15"/>
                    </StackPane>
                    <Label text="Normale" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Fine -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Rectangle width="80" height="8" fill="white" arcWidth="8" arcHeight="8"/>
                    </StackPane>
                    <Label text="Fine" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Crust -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Rectangle width="80" height="15" fill="white" arcWidth="20" arcHeight="20"/>
                    </StackPane>
                    <Label text="Crust" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
        </HBox>
    </VBox>
    
    <!-- Taille Section -->
    <VBox spacing="10">
        <padding>
            <Insets top="5" bottom="15" left="15" right="15"/>
        </padding>

        <Label text="Taille :" 
               style="-fx-text-fill: #5c5c8a; -fx-font-weight: bold;"/>
        
        <HBox spacing="15" alignment="CENTER">
            <!-- Petite -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Circle radius="25" fill="white"/>
                    </StackPane>
                    <Label text="Petite" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Moyenne -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Circle radius="35" fill="white"/>
                    </StackPane>
                    <Label text="Moyenne" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Grande -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Circle radius="45" fill="white"/>
                    </StackPane>
                    <Label text="Grande" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
        </HBox>
    </VBox>
    
    <!-- Sauce Section -->
    <VBox spacing="10">
        <padding>
            <Insets top="5" bottom="15" left="15" right="15"/>
        </padding>

        <Label text="Sauce :" 
               style="-fx-text-fill: #5c5c8a; -fx-font-weight: bold;"/>
        
        <HBox spacing="15" alignment="CENTER">
            <!-- Sauce Tomate -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <StackPane>
                            <Circle radius="40" fill="#e63946"/>
                            <Line startX="-10" startY="-30" endX="0" endY="-45" stroke="#4a7c59" strokeWidth="3"/>
                        </StackPane>
                    </StackPane>
                    <Label text="Sauce Tomate" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
            
            <!-- Sauce Crème -->
            <StackPane style="-fx-background-color: #fad889; -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <StackPane prefWidth="100" prefHeight="100" alignment="CENTER">
                        <Group>
                            <Rectangle width="40" height="60" fill="white" arcWidth="10" arcHeight="10"/>
                            <Rectangle x="40" width="15" height="15" fill="#4ba3e3" arcWidth="5" arcHeight="5"/>
                            <Line startX="55" startY="7" endX="65" endY="25" stroke="#4ba3e3" strokeWidth="3"/>
                        </Group>
                    </StackPane>
                    <Label text="Sauce crème" style="-fx-text-fill: #5c5c8a;"/>
                </VBox>
            </StackPane>
        </HBox>
    </VBox>
</VBox>